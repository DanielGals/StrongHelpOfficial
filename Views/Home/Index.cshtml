@model UserInfoViewModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="hero-section text-center text-white py-5">
    <div class="container">
        <h1 class="display-4">Easy Access Self-Service<br>Loan Portal</h1>
        <p>Apply for loans, track applications, and stay updated - all in one place. Exclusively for Metrobank
            Employees.</p>
        <div class="mt-4">
            <a href="/Auth/Login" class="btn btn-light btn-lg me-2">Get Started</a>
            <a href="#" class="btn btn-outline-light btn-lg">Learn More</a>
        </div>
    </div>
</div>

<div class="container my-5">
    <h2 class="text-center mb-4">Key Features</h2>
    <div class="row justify-content-center">
        <div class="col-md-4 mb-4">
            <div class="feature-card card p-4 text-center">
                <div class="icon-container mx-auto mb-3">
                    <i class="bi bi-file-text feature-icon"></i>
                </div>
                <h5>Easy Application</h5>
                <p class="small">Apply for loans online with a simple, user-friendly application process.</p>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="feature-card card p-4 text-center">
                <div class="icon-container mx-auto mb-3">
                    <i class="bi bi-graph-up feature-icon"></i>
                </div>
                <h5>Real-time Tracking</h5>
                <p class="small">Monitor your loan application status in real-time with instant updates.</p>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="feature-card card p-4 text-center">
                <div class="icon-container mx-auto mb-3">
                    <i class="bi bi-check-circle feature-icon"></i>
                </div>
                <h5>Streamlined Approval</h5>
                <p class="small">Efficient approval workflow ensures minimal delays and hassle-free processing.</p>
            </div>
        </div>
    </div>
</div>

<div class="container my-5">
    <h2 class="text-center mb-4">How It Works</h2>
    <div class="row text-center justify-content-center">
        <div class="col-md-3 mb-4">
            <div class="step-circle mx-auto mb-3">1</div>
            <h6>Login</h6>
            <p class="small">Securely access the portal using your Microbank employee credentials.</p>
        </div>
        <div class="col-md-3 mb-4">
            <div class="step-circle mx-auto mb-3">2</div>
            <h6>Apply</h6>
            <p class="small">Fill out financial information forms with your needs and requirements.</p>
        </div>
        <div class="col-md-3 mb-4">
            <div class="step-circle mx-auto mb-3">3</div>
            <h6>Track</h6>
            <p class="small">Monitor your application status in real-time through the approval process.</p>
        </div>
        <div class="col-md-3 mb-4">
            <div class="step-circle mx-auto mb-3">4</div>
            <h6>Manage</h6>
            <p class="small">View applications, loan repayments, and manage your loan portfolio.</p>
        </div>
    </div>
</div>

<div class="cta-section text-center text-white py-5">
    <div class="container">
        <h2>Ready to get Started?</h2>
        <p class="mb-4">Access the StrongHelp portal now to apply for loans and manage your finances with ease.</p>
        <a href="/Auth/Login" class="btn btn-light btn-lg">Login to Portal</a>
    </div>
</div>

<style>
    .hero-section {
        background-color: #4355db;
        padding: 80px 0;
    }

    .cta-section {
        background-color: #4355db;
    }

    .feature-card {
        height: 100%;
        border-radius: 8px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s;
        border: none;
    }

    .feature-card:hover {
        transform: translateY(-5px);
    }

    .icon-container {
        width: 64px;
        height: 64px;
        border-radius: 50%;
        background-color: #eef2ff;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .feature-icon {
        font-size: 28px;
        color: #4355db;
    }

    .step-circle {
        width: 60px;
        height: 60px;
        border-radius: 50%;
        background-color: #4355db;
        color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 24px;
        font-weight: bold;
    }

    .btn-light {
        font-weight: 500;
        padding: 10px 25px;
    }

    .btn-outline-light {
        border-width: 2px;
        padding: 10px 25px;
    }

    h5 {
        font-weight: 600;
        margin-bottom: 12px;
    }

    h2 {
        font-weight: 600;
    }

    h6 {
        font-weight: 600;
        margin-top: 10px;
    }

    .small {
        color: #555;
    }

    .container {
        max-width: 1140px;
    }
</style>

<!-- Add Bootstrap Icons for feature icons -->
<link rel="stylesheet" href="~/lib/bootstrap-icons/bootstrap-icons.min.css" asp-append-version="true" />