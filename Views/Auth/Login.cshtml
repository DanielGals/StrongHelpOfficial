@{
    ViewData["Title"] = "Login to StrongHelp";
}

<style>
    body {
        font-family: Arial, sans-serif;
    }

    .login-container {
        max-width: 450px;
        margin: 80px auto;
        padding: 20px;
        border: 1px solid #e0e0e0;
        border-radius: 8px;
        background-color: white;
    }

    .login-header {
        text-align: center;
        margin-bottom: 20px;
    }

    .login-title {
        font-size: 24px;
        font-weight: bold;
        margin-bottom: 8px;
    }

    .login-subtitle {
        color: #666;
        font-size: 14px;
    }

    .form-label {
        font-weight: 500;
        margin-bottom: 8px;
        display: block;
    }

    .form-control {
        width: 100%;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 4px;
        margin-bottom: 20px;
    }

    .login-button {
        width: 100%;
        background-color: black;
        color: white;
        padding: 12px;
        border: none;
        border-radius: 4px;
        font-size: 16px;
        cursor: pointer;
    }

    .support-text {
        text-align: center;
        margin-top: 15px;
        font-size: 14px;
        color: #666;
    }

    .brand-header {
        display: flex;
        align-items: center;
        padding: 10px 20px;
    }

    .brand-name {
        color: #4938D8;
        font-weight: bold;
        font-size: 18px;
        margin-left: 10px;
    }

    .footer {
        text-align: center;
        margin-top: 40px;
        color: #666;
        font-size: 12px;
    }
</style>


<div class="login-container">
    <div class="login-header">
        <h1 class="login-title">Login to StrongHelp</h1>
        <p class="login-subtitle">Enter your credentials to access the loan portal</p>
    </div>

    <form method="post" action="/Auth/Login">
        <label class="form-label" for="username">Username</label>
        <input type="text" class="form-control" id="username" name="username" placeholder="Enter your employee ID" required />

        <label class="form-label" for="password">Password</label>
        <input type="password" class="form-control" id="password" name="password" placeholder="Enter your password" required />

        <button type="submit" class="login-button">Login</button>
    </form>

    <div class="support-text">
        Having trouble logging in? Contact IT Support
    </div>
</div>
