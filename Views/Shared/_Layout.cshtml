<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - StrongHelpOfficial</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/StrongHelpOfficial.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/images/shield-logo.svg" alt="Shield Logo" width="32" height="38" class="me-2" style="vertical-align:middle;" />
                    Strong Help
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Auth" asp-action="Login">Login</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        @if (!string.IsNullOrEmpty(Context.Session.GetString("RoleName")))
        {
            string roleName = Context.Session.GetString("RoleName")!;
            <div class="row">
                <div class="col-md-3">
                    <nav class="nav flex-column">
                        @if (roleName == "Employee")
                        {
                            <a class="nav-link" href="/Loaner/LoanerDashboard/Index">Dashboard</a>
                            <a class="nav-link" href="/Loaner/ApplyForLoan">Apply For Loan</a>
                            <a class="nav-link" href="/Loaner/MyApplication">My Application</a>
                            <a class="nav-link" href="/Loaner/LoanHistory">Loan History</a>
                            <a class="nav-link" href="/Auth/Logout">Logout</a>
                        }
                        else if (roleName == "Benefits Assistant")
                        {
                            <a class="nav-link" href="/BenefitsAssistant/BenefitsAssistantDashboard/Index">Dashboard</a>
                            <a class="nav-link" href="/BenefitsAssistant/Applications">Applications</a>
                            <a class="nav-link" href="/BenefitsAssistant/Reports">Reports</a>
                            <a class="nav-link" href="/BenefitsAssistant/Logs">Logs</a>
                            <a class="nav-link" href="/BenefitsAssistant/LoanInformation">Loan Information</a>
                            <a class="nav-link" href="/Auth/Logout">Logout</a>
                        }
                        else
                        {
                            <a class="nav-link" href="/Approver/ApproverDashboard/Index">Dashboard</a>
                            <a class="nav-link" href="/Approver/Applications">Applications</a>
                            <a class="nav-link" href="/Approver/Logs">Logs</a>
                            <a class="nav-link" href="/Auth/Logout">Logout</a>
                        }

                    </nav>
                </div>
                <div class="col-md-9">
                    <main role="main" class="pb-3">
                        @RenderBody()
                    </main>
                </div>
            </div>
        }
        else
        {
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        }
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 StrongHelp. All rights reserved. A capstone project by STI College Global City.
            <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
